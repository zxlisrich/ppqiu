.comments{
  background-color: #fff;
  display: flex;
  flex-direction: column;
  border: 1px solid #d5d9db
}

.bottem_message{
  display: flex;
  flex-direction: row;
  font-size: 35rpx;
  align-items: center;
  margin-bottom: 15rpx;
}

.bottem_head{
  height: 70rpx;
  width: 70rpx;
  margin: 8rpx 25rpx;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  border-radius: 50%;
  overflow:hidden;
}
.bottem_head image{
  /* width: 100%; */
  height: 100%;
  border-radius: 50%;
  overflow:hidden;
}

.bottom_name{
  margin-right: 20rpx;
  font-weight: 600;
}
.bottom_time{
  font-size: 25rpx;
  color: #666666;
}

.comments_content{
  line-height: 1.3rem;
  letter-spacing: 3rpx;
  text-indent: 1rem;
}
