page{
  font-family: "方正仿宋";
  /* background-color: linen; */
}
.sub{
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  right:  10rpx;
  display: flex;
 
  
}

.sub button{
  width: 50rpx;
  font-size: 25rpx;
}
.sub input{
  background: rgb(11, 136, 78);
  color: #666666;
  margin-left: 40rpx;
  width: 200rpx;
  border-radius: 30%;
}

.user_message{

  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx;
} 

.user_icon{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.user_text{
  
  height: 100%;
  display: flex;
  padding-left: auto 20rpx;
  /* align-items: center; */
  flex-direction: column;
  font-size: 30rpx;
  line-height: 1.5rem;
  letter-spacing: 7rpx;
}
.user_time{
  font-size: 25rpx;
  color: lightslategrey;
}

.contents{

  display: flex;
  flex-direction: column;
  margin: 10rpx;
}

.contents_text .title{
  font-weight: 700;
  font-size: 40rpx;
  
}
.contents_text .contents{
  font-size: 32rpx;
  line-height: 1.3rem;
  letter-spacing: 3rpx;
  text-indent: 1rem;
  text-align: left;
}
.imgs{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.contents_img image{
  margin-right: 10rpx;
  width: 235rpx;
  height: 235rpx;

}
.cutting{
  height: 13px;
  background-color: bisque;
}
